@page "/"

<PageTitle>Home | MedicalSite</PageTitle>

<!-- Decorative Background Blobs (Lively feel) -->
<div class="fixed top-20 left-10 w-72 h-72 bg-blue-400/20 rounded-full blur-3xl -z-10 animate-pulse"></div>
<div class="fixed bottom-20 right-10 w-96 h-96 bg-purple-400/20 rounded-full blur-3xl -z-10 animate-pulse" style="animation-delay: 1s;"></div>

<div class="space-y-16 py-8 relative">

    <!-- Hero Section with Heartbeat & ECG -->
    <AnimateIn Delay="0">
        <section class="flex flex-col items-center justify-center space-y-6 text-center">
            
            <!-- Beating Heart Icon -->
            <div class="relative mb-2">
                <div class="absolute inset-0 bg-red-500 blur-xl opacity-20 rounded-full animate-heartbeat"></div>
                <svg class="w-20 h-20 text-red-500 animate-heartbeat drop-shadow-sm" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" />
                </svg>
            </div>

            <div class="space-y-2">
                <h1 class="text-4xl font-extrabold tracking-tight text-[var(--app-text)] sm:text-5xl md:text-6xl">
                    Clinical <span class="bg-gradient-to-r from-blue-600 to-teal-500 bg-clip-text text-transparent">Dashboard</span>
                </h1>
                
                <!-- Animated ECG Line -->
                <div class="w-64 h-12 mx-auto opacity-60 overflow-hidden">
                    <svg viewBox="0 0 500 100" class="w-full h-full stroke-blue-500 fill-none" stroke-width="3">
                        <path class="animate-ecg" d="M0,50 L50,50 L60,20 L70,80 L80,50 L120,50 L130,10 L140,90 L150,50 L300,50 L310,20 L320,80 L330,50 L500,50" />
                    </svg>
                </div>

                <p class="text-xl font-medium text-slate-600 dark:text-slate-300">
                    Select a module to begin your session.
                </p>
            </div>
        </section>
    </AnimateIn>

    <!-- Navigation Cards Grid -->
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3 xl:gap-8">

        <!-- 1. ABG Interpreter -->
        <AnimateIn Delay="100">
            <NavLink href="abg" class="card-interactive group h-full">
                <div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-2xl bg-red-50 text-red-600 group-hover:bg-red-600 group-hover:text-white transition-all duration-300 group-hover:scale-110 shadow-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                </div>
                <h3 class="mb-3 text-xl font-bold text-[var(--app-text)] group-hover:text-blue-600 transition-colors">ABG Interpreter</h3>
                <p class="text-base text-slate-500 dark:text-slate-400 leading-relaxed">
                    Calculate acid-base disturbances, anion gaps, and Delta ratios instantly.
                </p>
            </NavLink>
        </AnimateIn>

        <!-- 2. Learning Centre -->
        <AnimateIn Delay="200">
            <NavLink href="learning-centre" class="card-interactive group h-full">
                <div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-2xl bg-indigo-50 text-indigo-600 group-hover:bg-indigo-600 group-hover:text-white transition-all duration-300 group-hover:scale-110 shadow-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path d="M12 14l9-5-9-5-9 5 9 5z" />
                        <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
                    </svg>
                </div>
                <h3 class="mb-3 text-xl font-bold text-[var(--app-text)] group-hover:text-blue-600 transition-colors">Learning Centre</h3>
                <p class="text-base text-slate-500 dark:text-slate-400 leading-relaxed">
                    Central hub including <strong>Pathology</strong>, <strong>Microbiology</strong>, and <strong>Pharmacology</strong> modules.
                </p>
            </NavLink>
        </AnimateIn>

        <!-- 3. About -->
        <AnimateIn Delay="300">
            <NavLink href="about" class="card-interactive group h-full">
                <div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-2xl bg-emerald-50 text-emerald-600 group-hover:bg-emerald-600 group-hover:text-white transition-all duration-300 group-hover:scale-110 shadow-sm">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                </div>
                <h3 class="mb-3 text-xl font-bold text-[var(--app-text)] group-hover:text-blue-600 transition-colors">About</h3>
                <p class="text-base text-slate-500 dark:text-slate-400 leading-relaxed">
                    Learn more about the project mission, open-source stack, and contributors.
                </p>
            </NavLink>
        </AnimateIn>

    </div>
</div>