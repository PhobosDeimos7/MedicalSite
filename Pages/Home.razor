@page "/"

<div class="space-y-12">
    <!-- Hero Section -->
    <section class="flex flex-col items-center justify-center space-y-6 py-12 text-center">
        <div class="space-y-2">
            <h1 class="text-4xl font-extrabold tracking-tight text-slate-900 sm:text-5xl md:text-6xl">
                Welcome to <span class="bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">MedicalSite</span>
            </h1>
            <p class="text-xl font-medium text-slate-600">
                Tools, Learning & Clinical Aids
            </p>
        </div>
        <p class="max-w-xl text-lg text-slate-500">
            A simplified interface for rapid clinical calculations and accessible medical education resources.
        </p>
    </section>

    <!-- Navigation Cards -->
    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
        
        <!-- ABG Card -->
        <NavLink href="abg" class="group flex flex-col items-center rounded-2xl border border-slate-200 bg-white p-8 text-center shadow-sm transition-all duration-300 hover:-translate-y-2 hover:shadow-xl hover:ring-2 hover:ring-blue-500/20">
            <div class="mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-red-50 text-4xl shadow-inner group-hover:bg-red-100">
                🩸
            </div>
            <h3 class="mb-3 text-xl font-bold text-slate-900 group-hover:text-blue-600">ABG Interpreter</h3>
            <p class="text-slate-600">
                Analyze arterial blood gases instantly. Calculate acid-base status and identify compensation.
            </p>
        </NavLink>

        <!-- Learning Centre Card -->
        <NavLink href="learning-centre" class="group flex flex-col items-center rounded-2xl border border-slate-200 bg-white p-8 text-center shadow-sm transition-all duration-300 hover:-translate-y-2 hover:shadow-xl hover:ring-2 hover:ring-blue-500/20">
            <div class="mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-indigo-50 text-4xl shadow-inner group-hover:bg-indigo-100">
                📚
            </div>
            <h3 class="mb-3 text-xl font-bold text-slate-900 group-hover:text-blue-600">Learning Centre</h3>
            <p class="text-slate-600">
                Explore curated study modules for Microbiology, Pharmacology, and General Pathology.
            </p>
        </NavLink>

        <!-- About Card -->
        <NavLink href="about" class="group flex flex-col items-center rounded-2xl border border-slate-200 bg-white p-8 text-center shadow-sm transition-all duration-300 hover:-translate-y-2 hover:shadow-xl hover:ring-2 hover:ring-blue-500/20">
            <div class="mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-emerald-50 text-4xl shadow-inner group-hover:bg-emerald-100">
                🏥
            </div>
            <h3 class="mb-3 text-xl font-bold text-slate-900 group-hover:text-blue-600">About the Project</h3>
            <p class="text-slate-600">
                Learn more about the mission, the open-source stack, and how to contribute to development.
            </p>
        </NavLink>

    </div>
</div>

