@page "/"

<div class="space-y-12">
    <!-- Hero Section -->
    <section class="flex flex-col items-center justify-center space-y-6 py-12 text-center">
        <div class="space-y-2">
            <!-- 
               FIX 1: Changed 'text-slate-900' to 'text-[var(--app-text)]' 
               This ensures "Welcome to" turns white in dark mode.
            -->
            <h1 class="text-4xl font-extrabold tracking-tight text-[var(--app-text)] sm:text-5xl md:text-6xl">
                Welcome to <span class="bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">MedicalSite</span>
            </h1>
            
            <!-- 
               FIX 2: Added 'dark:text-slate-300' 
               This makes the subtitle readable in dark mode (lighter gray).
            -->
            <p class="text-xl font-medium text-slate-600 dark:text-slate-300">
                Tools, Learning & Clinical Aids
            </p>
        </div>
        
        <!-- FIX 3: Added 'dark:text-slate-400' for the description -->
        <p class="max-w-xl text-lg text-slate-500 dark:text-slate-400">
            A simplified interface for rapid clinical calculations and accessible medical education resources.
        </p>
    </section>

    <!-- Navigation Cards -->
    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
        
        <!-- ABG Card -->
        <!-- 
            FIX 4: Card Container Updates:
            - Changed 'bg-white' to 'bg-[var(--app-surface)]' (Adapts to theme)
            - Changed 'border-slate-200' to 'border-[var(--app-border)]'
        -->
        <NavLink href="abg" class="group flex flex-col items-center rounded-2xl border border-[var(--app-border)] bg-[var(--app-surface)] p-8 text-center shadow-sm transition-all duration-300 hover:-translate-y-2 hover:shadow-xl hover:ring-2 hover:ring-blue-500/20">
            <div class="mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-red-50 text-4xl shadow-inner group-hover:bg-red-100">
                🩸
            </div>
            <!-- FIX 5: Changed 'text-slate-900' to 'text-[var(--app-text)]' -->
            <h3 class="mb-3 text-xl font-bold text-[var(--app-text)] group-hover:text-blue-600">ABG Interpreter</h3>
            <p class="text-slate-600 dark:text-slate-400">
                Analyze arterial blood gases instantly. Calculate acid-base status and identify compensation.
            </p>
        </NavLink>

        <!-- Learning Centre Card -->
        <NavLink href="learning-centre" class="group flex flex-col items-center rounded-2xl border border-[var(--app-border)] bg-[var(--app-surface)] p-8 text-center shadow-sm transition-all duration-300 hover:-translate-y-2 hover:shadow-xl hover:ring-2 hover:ring-blue-500/20">
            <div class="mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-indigo-50 text-4xl shadow-inner group-hover:bg-indigo-100">
                📚
            </div>
            <h3 class="mb-3 text-xl font-bold text-[var(--app-text)] group-hover:text-blue-600">Learning Centre</h3>
            <p class="text-slate-600 dark:text-slate-400">
                Explore curated study modules for Microbiology, Pharmacology, and General Pathology.
            </p>
        </NavLink>

        <!-- About Card -->
        <NavLink href="about" class="group flex flex-col items-center rounded-2xl border border-[var(--app-border)] bg-[var(--app-surface)] p-8 text-center shadow-sm transition-all duration-300 hover:-translate-y-2 hover:shadow-xl hover:ring-2 hover:ring-blue-500/20">
            <div class="mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-emerald-50 text-4xl shadow-inner group-hover:bg-emerald-100">
                🏥
            </div>
            <h3 class="mb-3 text-xl font-bold text-[var(--app-text)] group-hover:text-blue-600">About the Project</h3>
            <p class="text-slate-600 dark:text-slate-400">
                Learn more about the mission, the open-source stack, and how to contribute to development.
            </p>
        </NavLink>

    </div>
</div>

