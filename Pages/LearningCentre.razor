@page "/learning-centre"
@using MedicalSite.Features.Learning.Components
@using MedicalSite.Features.Learning.Models
@using MedicalSite.Features.Learning.Services
@inject LearningService LearningService
@inject NavigationManager Nav

<div class="max-w-6xl mx-auto pb-12">
    <div class="mb-10 text-center">
        <h1 class="text-4xl font-bold text-[var(--app-text)] mb-3">Learning Centre</h1>
        <p class="text-slate-500 text-lg">Select a subject to begin studying.</p>
    </div>

    @if (IsLoading)
    {
        <div class="text-center py-20 text-slate-400">Loading subjects...</div>
    }
    else
    {
        <!-- SECTION 1: Para-clinical -->
        <div class="mb-12">
            <h2 class="text-2xl font-bold text-slate-700 dark:text-slate-200 border-b border-slate-200 dark:border-slate-700 pb-2 mb-6">
                üß¨ Para-clinical Subjects
            </h2>
            
            @if (ParaClinicalSubjects.Any())
            {
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    @foreach (var subject in ParaClinicalSubjects)
                    {
                        <SubjectCard Subject="subject" />
                    }
                </div>
            }
            else
            {
                <div class="text-slate-400 italic">No para-clinical subjects found.</div>
            }
        </div>

        <!-- SECTION 2: Clinical -->
        <div>
            <h2 class="text-2xl font-bold text-slate-700 dark:text-slate-200 border-b border-slate-200 dark:border-slate-700 pb-2 mb-6">
                üè• Clinical Subjects
            </h2>

            @if (ClinicalSubjects.Any())
            {
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    @foreach (var subject in ClinicalSubjects)
                    {
                        <SubjectCard Subject="subject" />
                    }
                </div>
            }
            else
            {
                <div class="text-slate-400 italic">No clinical subjects added yet.</div>
            }
        </div>
    }
</div>

@code {
    private List<Subject> Subjects = new();
    private bool IsLoading = true;

    // Filter Logic
    private IEnumerable<Subject> ParaClinicalSubjects => 
        Subjects.Where(s => s.Category == "Para-clinical");

    private IEnumerable<Subject> ClinicalSubjects => 
        Subjects.Where(s => s.Category == "Clinical");

    protected override async Task OnInitializedAsync()
    {
        Subjects = await LearningService.GetSubjectsAsync();
        IsLoading = false;
    }
}