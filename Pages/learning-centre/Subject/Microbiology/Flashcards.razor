@page "/learning-centre/microbiology/flashcards"
@inject IJSRuntime JSRuntime
@using System.Text.Json

<div class="mx-auto max-w-3xl space-y-8 p-4">
    <!-- Header -->
    <div class="flex items-center justify-between border-b border-[var(--app-border)] pb-4">
        <div>
            <h1 class="text-3xl font-bold text-[var(--app-text)]">Microbiology Flashcards</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Master pathogens and treatments</p>
        </div>
        <div class="rounded-full bg-emerald-100 px-3 py-1 text-sm font-semibold text-emerald-800 dark:bg-emerald-900 dark:text-emerald-200">
            @if (Cards.Any()) { <span>@(CurrentIndex + 1) / @Cards.Count</span> } else { <span>0 / 0</span> }
        </div>
    </div>

    <!-- Flashcard Area -->
    <div class="relative h-80 w-full" style="perspective: 1000px;">
        @if (Cards.Count > 0)
        {
            <div class="cursor-pointer relative h-full w-full transition-transform duration-500"
                 style="@(IsFlipped ? "transform: rotateY(180deg); transform-style: preserve-3d;" : "transform-style: preserve-3d;")"
                 @onclick="FlipCard">
                <div class="absolute inset-0 flex flex-col items-center justify-center rounded-2xl border border-[var(--app-border)] bg-[var(--app-surface)] p-8 text-center shadow-lg" style="backface-visibility: hidden;">
                    <span class="mb-4 text-xs font-bold uppercase tracking-wider text-emerald-600 dark:text-emerald-400">Question</span>
                    <p class="text-2xl font-medium text-[var(--app-text)]">@Cards[CurrentIndex].Front</p>
                    <p class="absolute bottom-4 text-xs text-gray-400">Click to flip</p>
                </div>
                <div class="absolute inset-0 flex flex-col items-center justify-center rounded-2xl border border-emerald-200 bg-emerald-50 p-8 text-center shadow-lg dark:border-emerald-900 dark:bg-emerald-950" style="transform: rotateY(180deg); backface-visibility: hidden;">
                    <span class="mb-4 text-xs font-bold uppercase tracking-wider text-emerald-600 dark:text-emerald-400">Answer</span>
                    <p class="text-xl text-gray-800 dark:text-gray-100">@Cards[CurrentIndex].Back</p>
                </div>
            </div>
        }
        else
        {
            <div class="flex h-full w-full flex-col items-center justify-center rounded-2xl border-2 border-dashed border-gray-300 bg-gray-50 text-center dark:border-slate-700 dark:bg-slate-800/50">
                <div class="text-4xl">ü¶†</div>
                <h3 class="mt-2 text-lg font-medium text-gray-900 dark:text-white">No flashcards yet</h3>
                <p class="text-gray-500 dark:text-gray-400">Add a new card below.</p>
            </div>
        }
    </div>

    <!-- Controls -->
    @if (Cards.Count > 0)
    {
        <div class="flex justify-center gap-4">
            <button @onclick="PrevCard" disabled="@(Cards.Count <= 1)" class="rounded-lg bg-gray-200 px-4 py-2 font-medium text-gray-700 hover:bg-gray-300 disabled:opacity-50 dark:bg-slate-700 dark:text-white">‚Üê Prev</button>
            <button @onclick="DeleteCard" class="rounded-lg border border-red-200 bg-red-50 px-4 py-2 text-sm font-medium text-red-600 hover:bg-red-100 dark:border-red-900 dark:bg-red-900/20 dark:text-red-400">Delete</button>
            <button @onclick="NextCard" disabled="@(Cards.Count <= 1)" class="rounded-lg bg-gray-200 px-4 py-2 font-medium text-gray-700 hover:bg-gray-300 disabled:opacity-50 dark:bg-slate-700 dark:text-white">Next ‚Üí</button>
        </div>
    }

    <!-- Add Form -->
    <div class="rounded-xl border border-[var(--app-border)] bg-[var(--app-surface)] p-6 shadow-sm mt-8">
        <h3 class="mb-4 text-lg font-bold text-[var(--app-text)]">Add New Card</h3>
        <div class="grid gap-4 md:grid-cols-2">
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Front</label>
                <input @bind="NewFront" class="mt-1 block w-full rounded-md border border-gray-300 bg-gray-50 px-3 py-2 shadow-sm dark:border-slate-600 dark:bg-slate-700 dark:text-white" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Back</label>
                <input @bind="NewBack" class="mt-1 block w-full rounded-md border border-gray-300 bg-gray-50 px-3 py-2 shadow-sm dark:border-slate-600 dark:bg-slate-700 dark:text-white" />
            </div>
        </div>
        <div class="mt-4 flex justify-end">
            <button @onclick="AddCard" class="rounded-lg bg-emerald-600 px-6 py-2 font-semibold text-white">Add Card</button>
        </div>
    </div>
</div>

@code {
    private const string StorageKey = "micro_flashcards";
    private List<Flashcard> Cards = new();
    private int CurrentIndex = 0;
    private bool IsFlipped = false;
    private string NewFront { get; set; } = "";
    private string NewBack { get; set; } = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var json = await JSRuntime.InvokeAsync<string>("appStorage.load", StorageKey);
            if (!string.IsNullOrEmpty(json))
            {
                try { Cards = JsonSerializer.Deserialize<List<Flashcard>>(json) ?? new(); StateHasChanged(); } catch {}
            }
        }
    }

    private void FlipCard() => IsFlipped = !IsFlipped;
    private void NextCard() { if (Cards.Any()) { IsFlipped = false; CurrentIndex = (CurrentIndex + 1) % Cards.Count; } }
    private void PrevCard() { if (Cards.Any()) { IsFlipped = false; CurrentIndex = (CurrentIndex - 1 + Cards.Count) % Cards.Count; } }

    private async Task AddCard()
    {
        if (!string.IsNullOrWhiteSpace(NewFront) && !string.IsNullOrWhiteSpace(NewBack))
        {
            Cards.Add(new Flashcard { Front = NewFront, Back = NewBack });
            NewFront = ""; NewBack = "";
            if (Cards.Count == 1) CurrentIndex = 0;
            await SaveCards();
        }
    }

    private async Task DeleteCard()
    {
        if (Cards.Any())
        {
            Cards.RemoveAt(CurrentIndex);
            IsFlipped = false;
            if (CurrentIndex >= Cards.Count) CurrentIndex = Math.Max(0, Cards.Count - 1);
            await SaveCards();
        }
    }

    private async Task SaveCards()
    {
        await JSRuntime.InvokeVoidAsync("appStorage.save", StorageKey, JsonSerializer.Serialize(Cards));
    }

    public class Flashcard { public string Front { get; set; } = ""; public string Back { get; set; } = ""; }
}