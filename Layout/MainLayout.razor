@inherits LayoutComponentBase

<div class="min-h-screen bg-gray-50">
    <!-- Fixed Left Sidebar -->
    <aside class="fixed inset-y-0 left-0 z-30 w-64 bg-slate-800 text-white">
        <NavMenu />
    </aside>
    <!-- Main Content Wrapper (offset by sidebar width) -->
    <div class="ml-64 flex min-h-screen flex-col">
        <!-- Fixed Top Header -->
        <header class="fixed top-0 right-0 left-64 z-20 flex h-16 items-center justify-between border-b border-gray-200 bg-white px-6 shadow-sm">
            <span class="text-lg font-semibold text-gray-700">App Dashboard</span>
            <ThemeToggle />
            <div class="flex items-center gap-4">
                <button class="rounded-full bg-gray-100 p-2 text-gray-600 hover:bg-gray-200">
                    🔔
                </button>
                <div class="h-8 w-8 rounded-full bg-blue-500"></div>
            </div>
        </header>
        <!-- Main Content Area (offset by header height) -->
        <main class="mt-16 flex-1 p-8">
            @Body
        </main>
    </div>
</div>

