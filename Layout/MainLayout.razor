@inherits LayoutComponentBase
@inject NavigationManager Nav

<!-- 
    Main Layout Wrapper
    - min-h-screen: Ensures full height
    - flex-col: Stacks Navbar and Main Content
    - transition-colors: Smooth theme switching
-->
<div class="min-h-screen flex flex-col bg-[var(--app-bg)] text-[var(--app-text)] transition-colors duration-300">
    
    <!-- Top Navigation Bar -->
    <TopNavBar />

    <!-- 
        Main Content Area 
        - Centered container (max-w-7xl)
        - Flex-1 to fill remaining space
    -->
    <main class="flex-1 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        
        <!-- 
            PAGE TRANSITION WRAPPER
            @key="@Nav.Uri" forces Blazor to re-render this div 
            whenever the URL changes, triggering the .page-transition CSS animation.
        -->
        <div @key="@Nav.Uri" class="page-transition">
            @Body
        </div>

    </main>

</div>