@inject NavigationManager Navigation

<!-- 
    Top Navigation Bar 
    - Uses sticky positioning to stay at the top.
    - Uses your custom variables for background/borders.
    - Responsive: Links collapse or adjust on smaller screens (simplified here for clarity).
-->
<header class="sticky top-0 z-40 w-full border-b border-[var(--app-border)] bg-[var(--app-surface)]/95 backdrop-blur supports-[backdrop-filter]:bg-[var(--app-surface)]/60 transition-colors duration-300">
    <div class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
        
        <!-- Left: Logo / Brand -->
        <div class="flex items-center gap-8">
            <a href="" class="flex items-center gap-2 font-bold text-[var(--app-text)] text-xl hover:text-blue-600 transition-colors">
                <span>MedicalSite</span>
            </a>

            <!-- Desktop Navigation Links (Visible on internal pages) -->
            <nav class="hidden md:flex items-center gap-6">
                <NavLink href="" Match="NavLinkMatch.All" class="text-sm font-medium text-slate-500 hover:text-blue-600 dark:text-slate-400 [&.active]:text-blue-600">
                    Home
                </NavLink>
                <NavLink href="abg" class="text-sm font-medium text-slate-500 hover:text-blue-600 dark:text-slate-400 [&.active]:text-blue-600">
                    ABG
                </NavLink>
                <NavLink href="learning-centre" class="text-sm font-medium text-slate-500 hover:text-blue-600 dark:text-slate-400 [&.active]:text-blue-600">
                    Learning
                </NavLink>
                <NavLink href="about" class="text-sm font-medium text-slate-500 hover:text-blue-600 dark:text-slate-400 [&.active]:text-blue-600">
                    About
                </NavLink>
            </nav>
        </div>

        <!-- Right: Actions & Theme Toggle -->
        <div class="flex items-center gap-4">
            <!-- Re-integrating your ThemeToggle -->
            <ThemeToggle />

            <!-- Notification Bell (from your original layout) -->
            <button class="rounded-full p-2 text-[var(--app-text)] hover:bg-[var(--app-border)] transition-colors">
                ðŸ””
            </button>
            
            <!-- User Avatar -->
            <div class="h-8 w-8 rounded-full bg-gradient-to-tr from-blue-500 to-indigo-500 shadow-md"></div>
        </div>
    </div>
</header>