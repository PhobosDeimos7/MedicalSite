@using MedicalSite.Features.Learning.Models

<div class="relative pl-6 mt-4 border-l-2 border-slate-300 dark:border-slate-600 transition-all">
    <!-- Node Editor Card -->
    <div class="bg-white dark:bg-slate-800 p-4 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 hover:border-blue-400 transition-colors">
        
        <div class="flex gap-4 items-start">
            <!-- Content Inputs -->
            <div class="flex-grow space-y-3">
                <div class="flex gap-2">
                    <!-- Title Input -->
                    <input @bind="Node.Title" @bind:event="oninput"
                           placeholder="Node Title (e.g. Symptoms)" 
                           class="w-full px-3 py-2 bg-slate-50 dark:bg-slate-900 border border-slate-300 dark:border-slate-700 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none font-bold text-slate-900 dark:text-white" />
                    
                    <!-- Type Selector -->
                    <select @bind="Node.Type" class="px-3 py-2 bg-slate-50 dark:bg-slate-900 border border-slate-300 dark:border-slate-700 rounded-lg text-sm font-medium">
                        <option value="Standard">Standard</option>
                        <option value="Decision">Decision (Diamond)</option>
                        <option value="Start">Start</option>
                        <option value="End">End</option>
                        <option value="Result">Result (Green)</option>
                        <option value="Warning">Warning (Red)</option>
                    </select>
                </div>

                <!-- Description Input -->
                <textarea @bind="Node.Description" @bind:event="oninput"
                          placeholder="Short description (optional)..."
                          rows="2"
                          class="w-full px-3 py-2 bg-slate-50 dark:bg-slate-900 border border-slate-300 dark:border-slate-700 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none text-sm"></textarea>
            </div>

            <!-- Actions -->
            <div class="flex flex-col gap-2">
                <button @onclick="AddChild" title="Add Child Node"
                        class="p-2 bg-green-100 text-green-700 rounded-lg hover:bg-green-200 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                    </svg>
                </button>
                
                @if (OnRemove.HasDelegate)
                {
                    <button @onclick="RemoveNode" title="Delete this Node"
                            class="p-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                        </svg>
                    </button>
                }
            </div>
        </div>
    </div>

    <!-- Recursive Children -->
    @if (Node.Children.Any())
    {
        <div class="flex flex-col">
            @foreach (var child in Node.Children)
            {
                <FlowchartEditorNode Node="child" OnRemove="() => RemoveChild(child)" />
            }
        </div>
    }
</div>

@code {
    [Parameter] public FlowchartNode Node { get; set; } = new();
    [Parameter] public EventCallback OnRemove { get; set; }

    private void AddChild()
    {
        Node.Children.Add(new FlowchartNode { Title = "New Node" });
    }

    private void RemoveChild(FlowchartNode child)
    {
        Node.Children.Remove(child);
    }

    private async Task RemoveNode()
    {
        if (OnRemove.HasDelegate)
        {
            await OnRemove.InvokeAsync();
        }
    }
}