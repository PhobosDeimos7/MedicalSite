@using MedicalSite.Features.Learning.Models
@inject NavigationManager Nav

<!-- CARD CONTAINER -->
<!-- Removed 'dark:bg-slate-800'. Now it is ALWAYS 'bg-white' -->
<div class="h-full flex flex-col rounded-2xl overflow-hidden transition-all duration-300 hover:shadow-lg
            bg-white border border-slate-200 shadow-sm
            dark:border-slate-700 dark:shadow-slate-900/50">
    
    <!-- HEADER -->
    <div class="p-6 border-b border-slate-100">
        <div class="flex items-center justify-between mb-3">
            <!-- TITLE: Always Dark Slate (Black-ish) -->
            <h3 class="text-xl font-bold text-slate-900">
                @Subject.Name
            </h3>
            
            <!-- BADGE: Blue text on blue bg -->
            <span class="text-xs font-bold px-3 py-1 rounded-full 
                         bg-blue-50 text-blue-700 border border-blue-100">
                @Subject.Topics.Count @(Subject.Topics.Count == 1 ? "topic" : "topics")
            </span>
        </div>
        
        <!-- DESCRIPTION: Always Slate-600 -->
        <p class="text-slate-600 text-sm leading-relaxed">
            @Subject.Description
        </p>
    </div>
    
    <!-- TOPICS LIST AREA -->
    <!-- Always Light Grey Background -->
    <div class="flex-grow p-4 bg-slate-50">
        @if (Subject.Topics.Any())
        {
            <div class="flex flex-col gap-2">
                @foreach (var topic in Subject.Topics)
                {
                    <a href="@($"/learning/{Subject.Id}/{topic.Id}")" 
                       class="group flex items-center justify-between w-full px-4 py-3 rounded-xl border transition-all cursor-pointer
                              bg-white border-slate-200 hover:border-blue-400 hover:shadow-md">
                        
                        <!-- TOPIC TEXT: Always Slate-700 (Dark Grey) -->
                        <span class="text-sm font-bold text-slate-700 group-hover:text-blue-600">
                            @topic.Title
                        </span>
                        
                        <!-- ARROW ICON -->
                        <svg class="w-4 h-4 text-slate-400 group-hover:text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </a>
                }
            </div>
        }
        else
        {
            <div class="h-full flex items-center justify-center text-slate-400 text-sm italic py-4">
                Coming soon...
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public Subject Subject { get; set; } = new();
}